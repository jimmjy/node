extends layouts/main-layout.pug

block styles    
    link(rel="stylesheet", href="/css/product.css")

block content
    main
            if prods.length > 0
                .grid
                    //- for looping product array from shop.js
                    each book in prods
                        article.cart.product-item
                            header.card__header
                                h1.product__title #{book.title}
                            div.card__image
                                img(src="https://www.incimages.com/uploaded_files/image/970x450/getty_883231284_200013331818843182490_335833.jpg", alt="A Book")
                            div.card__content
                                h2.prduct__price $19.99
                                p.product__description A very interesting book about so many even more interesting things!
                            .card__actions
                                button.btn Add to Cart
            else
                h1 Cart Empty

